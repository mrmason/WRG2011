<h2>Players</h2>

<table class="view">
  <tr>
    <th>FFID</th>
    <th>Name</th>
    <th>Team</th>
    <th>Position</th>
    <th>Value</th>
    <th>Total Points</th>
    <th>Owner</th>
    <th>Price Paid</th>
    <th>Status</th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= link_to player.ff_id, player%></td>
    <td><%= link_to player.full_name, player %></td>
    <td><%= player.team %></td>
    <td><%= player.type_name %>
    <td><%= player.value %></td>
    <td><%= player.total_points %></td>
    <td><%= player.member.team.team_name unless player.member.nil? %></td>
    <td><%= player.member.price_paid.to_f/10 unless player.member.nil? %></td>
    <td><%= player.status %></td>
  </tr>
<% end %>
</table>

<br />

